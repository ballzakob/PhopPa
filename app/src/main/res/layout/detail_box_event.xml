<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="300dp"
    android:layout_marginStart="50dp"
    android:layout_marginEnd="50dp"
    android:layout_marginBottom="20dp"
    android:background="#ffffff">

    <RelativeLayout
        android:id="@+id/layout_image_event"
        android:layout_width="300dp"
        android:layout_height="140dp">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginBottom="-20dp"
            app:cardCornerRadius="11dp">

            <ImageView
                android:id="@+id/imageView_event_image"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:scaleType="fitXY"
                android:src="@drawable/eveandboy" />

        </android.support.v7.widget.CardView>
    </RelativeLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_event_logo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@+id/layout_image_event"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="28dp"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="-42dp"
        android:src="@drawable/ball" />

    <TextView
        android:id="@+id/textView_start_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_image_event"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="140dp"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="9dp"
        android:drawableLeft="@drawable/ic_location_on_black_24dp"
        android:text="Terminal21" />

    <TextView
        android:id="@+id/textView_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_image_event"

        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="140dp"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="42dp"
        android:drawableLeft="@drawable/ic_people_black_24dp"
        android:text="1/2" />

    <TextView
        android:id="@+id/textView_header_detail"
        android:layout_width="86dp"
        android:layout_height="37dp"
        android:layout_below="@+id/image_event_logo"
        android:layout_alignStart="@+id/image_event_logo"
        android:layout_alignLeft="@+id/image_event_logo"
        android:layout_alignEnd="@+id/image_event_logo"
        android:layout_alignRight="@+id/image_event_logo"
        android:layout_marginStart="-3dp"
        android:layout_marginLeft="-3dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="-2dp"
        android:layout_marginRight="-2dp"
        android:gravity="center"
        android:text="Yodsaball"
        android:textSize="16dp"
        android:textStyle="bold" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_image_event"
        android:layout_alignStart="@+id/image_event_logo"
        android:layout_alignLeft="@+id/image_event_logo"
        android:layout_alignEnd="@+id/image_event_logo"
        android:layout_alignRight="@+id/image_event_logo"
        android:layout_marginStart="-5dp"
        android:layout_marginLeft="-5dp"
        android:layout_marginTop="73dp"
        android:layout_marginEnd="-3dp"
        android:layout_marginRight="-3dp"
        android:hint="Join" />

</RelativeLayout>

