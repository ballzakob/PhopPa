<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@null"
        android:baselineAligned="false">


        <TextView
            android:id="@+id/text_show"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="เลือกประเภทกิจกรรมที่คล้ายกัน"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <Button
            android:id="@+id/buttonBack"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_back_24dp" />
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewEventType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:text="ประเภทของกิจกรรม"
            android:textColor="@color/white"
            android:textSize="14dp"
            android:textStyle="bold" />

        <com.dd.ShadowLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            app:sl_cornerRadius="15dp"
            app:sl_dx="3dp"
            app:sl_dy="5dp"
            app:sl_shadowColor="#1D000000"
            app:sl_shadowRadius="7dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_white"

                android:orientation="horizontal">


                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_margin="15dp"
                    android:src="@drawable/ic_local_activity_white" />

                <Spinner
                    android:id="@+id/spinner1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_marginEnd="0dp"
                    android:outlineSpotShadowColor="@color/white" />

            </LinearLayout>
        </com.dd.ShadowLayout>


        <TextView
            android:id="@+id/textViewEventLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:text="สถานที่จัดกิจกรรม"
            android:textColor="@color/white"
            android:textSize="14dp"
            android:textStyle="bold" />

        <com.dd.ShadowLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"

            app:sl_cornerRadius="15dp"
            app:sl_dx="3dp"
            app:sl_dy="5dp"
            app:sl_shadowColor="#1D000000"
            app:sl_shadowRadius="7dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_white"

                android:orientation="horizontal">


                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_margin="15dp"
                    android:src="@drawable/location_white" />

                <TextView
                    android:id="@+id/textViewEventNameLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:gravity="left|center"
                    android:inputType="textMultiLine"
                    android:padding="10dp"
                    android:text="เลือกสถานที่จัดกิจกรรม"
                    android:textColor="@color/white"
                    android:textSize="12dp" />

            </LinearLayout>

        </com.dd.ShadowLayout>

        <com.dd.ShadowLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            app:sl_cornerRadius="15dp"
            app:sl_dx="3dp"
            app:sl_dy="5dp"
            app:sl_shadowColor="#1D000000"
            app:sl_shadowRadius="7dp">

            <Button
                android:id="@+id/buttonNext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/mybutton"
                android:elevation="5dp"
                android:paddingLeft="50dp"
                android:paddingRight="50dp"
                android:text="ถัดไป"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textStyle="bold" />
        </com.dd.ShadowLayout>

        <com.dd.ShadowLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            app:sl_cornerRadius="15dp"
            app:sl_dx="3dp"
            app:sl_dy="5dp"
            app:sl_shadowColor="#1D000000"
            app:sl_shadowRadius="7dp">

            <Button
                android:id="@+id/buttonSkip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/mybutton"
                android:elevation="5dp"
                android:paddingLeft="50dp"
                android:paddingRight="50dp"
                android:text="ข้ามไปยังหน้าสร้างกิจกรรม"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textStyle="bold" />
        </com.dd.ShadowLayout>

    </LinearLayout>

</RelativeLayout>