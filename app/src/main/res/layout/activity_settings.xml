<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.SettingsActivity">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/juicy_cake"
        android:baselineAligned="false">


        <TextView
            android:id="@+id/text_create"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="การตั้งค่า"
            android:textColor="#ffffff"
            android:textSize="18sp" />


        <Button
            android:id="@+id/button_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_back_24dp" />
    </android.support.v7.widget.Toolbar>


    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:layout_marginBottom="20dp"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical"
            android:padding="10dp">
            <com.dd.ShadowLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:sl_cornerRadius="75dp"
                app:sl_dx="3dp"
                app:sl_dy="5dp"
                app:sl_shadowColor="#1D000000"
                app:sl_shadowRadius="5dp">

                <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/circleImageView_profile"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:src="@drawable/user" />
            </com.dd.ShadowLayout>
            <View
                android:layout_width="wrap_content"
                android:layout_height="20dp"/>


            <TextView
                android:id="@+id/textViewProfile"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:text="ข้อมูลส่วนตัว"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"

                tools:layout_editor_absoluteX="94dp"
                tools:layout_editor_absoluteY="172dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="105dp"
                    android:layout_height="40dp"
                    android:background="#ffffff"
                    android:drawablePadding="5dp"
                    android:gravity="center_vertical"
                    android:hint="ชื่อจริง"
                    android:padding="10dp" />
                <TextView
                    android:id="@+id/textViewFirstName"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="#ffffff"
                    android:drawablePadding="5dp"
                    android:gravity="center_vertical"
                    android:hint="ชื่อจริง"
                    android:padding="10dp" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="105dp"
                    android:layout_height="40dp"
                    android:background="#ffffff"
                    android:drawablePadding="5dp"
                    android:gravity="center_vertical"
                    android:hint="นามสกุล"
                    android:padding="10dp" />
                <TextView
                    android:id="@+id/textViewLastName"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="#ffffff"
                    android:drawablePadding="5dp"
                    android:gravity="center_vertical"
                    android:hint="นามสกุล"
                    android:padding="10dp" />
            </LinearLayout>



            <TextView
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="105dp"
                    android:layout_height="40dp"
                    android:background="#ffffff"
                    android:drawablePadding="5dp"
                    android:gravity="center_vertical"
                    android:hint="วันเกิด"
                    android:padding="10dp" />
                <TextView
                    android:id="@+id/textViewBirthday"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="#ffffff"
                    android:drawablePadding="5dp"
                    android:gravity="center_vertical"
                    android:hint="วันเกิด"
                    android:padding="10dp" />
            </LinearLayout>




            <TextView
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="105dp"
                    android:layout_height="40dp"
                    android:background="#ffffff"
                    android:drawablePadding="5dp"
                    android:gravity="center_vertical"
                    android:hint="เบอร์โทรศัพท์"
                    android:padding="10dp" />
                <TextView
                    android:id="@+id/textViewTelephone"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="#ffffff"
                    android:gravity="center_vertical"
                    android:hint="เบอร์โทรศัพท์"
                    android:padding="10dp" />
            </LinearLayout>
            <View
                android:layout_width="wrap_content"
                android:layout_height="10dp"/>
            <com.dd.ShadowLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:sl_cornerRadius="15dp"
                app:sl_dx="3dp"
                app:sl_dy="5dp"
                app:sl_shadowColor="#1D000000"
                app:sl_shadowRadius="7dp">

                <Button
                    android:id="@+id/buttonEditProfile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/mybutton"
                    android:elevation="5dp"
                    android:paddingRight="50dp"
                    android:paddingLeft="50dp"
                    android:text="แก้ไขข้อมูลส่วนตัว"
                    android:textAllCaps="false"
                    android:textColor="@color/white" />
            </com.dd.ShadowLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="3dp"

                android:layout_marginBottom="10dp"
                android:background="@drawable/background" />

            <TextView
                android:id="@+id/textViewConfirmIdentity"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="bottom"
                android:text="การยืนยันตัวตน"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp"
                tools:layout_editor_absoluteX="94dp"
                tools:layout_editor_absoluteY="172dp" />

            <com.dd.ShadowLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:sl_cornerRadius="15dp"
                app:sl_dx="3dp"
                app:sl_dy="5dp"
                app:sl_shadowColor="#1D000000"
                app:sl_shadowRadius="7dp">

                <Button
                    android:id="@+id/buttonConfirmIdentity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/mybutton"
                    android:elevation="5dp"
                    android:paddingRight="50dp"
                    android:paddingLeft="50dp"
                    android:text="ยังไม่ได้ยืนยันตัวตน"
                    android:textAllCaps="false"
                    android:textColor="@color/white" />
            </com.dd.ShadowLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/background" />

            <TextView
                android:id="@+id/textViewPassword"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="bottom"
                android:text="รหัสผ่าน"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="94dp"
                tools:layout_editor_absoluteY="172dp" />

            <Button
                android:id="@+id/buttonChangePassword"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="15dp"
                android:background="@color/colorPrimaryDark"
                android:text="เปลี่ยนรหัสผ่าน"
                android:textAllCaps="false"
                android:textColor="#ffffff" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@color/colorPrimaryDark" />

            <TextView
                android:id="@+id/textViewAccount"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="bottom"
                android:text="บัญชีผู่ใช้"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="94dp"
                tools:layout_editor_absoluteY="172dp" />

            <com.dd.ShadowLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:sl_cornerRadius="15dp"
                app:sl_dx="3dp"
                app:sl_dy="5dp"
                app:sl_shadowColor="#1D000000"
                app:sl_shadowRadius="7dp">

                <Button
                    android:id="@+id/buttonLogout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/mybutton"
                    android:elevation="5dp"
                    android:paddingRight="50dp"
                    android:paddingLeft="50dp"
                    android:text="ออกจากระบบ"
                    android:textAllCaps="false"
                    android:textColor="@color/white" />
            </com.dd.ShadowLayout>


            <com.dd.ShadowLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:sl_cornerRadius="15dp"
                app:sl_dx="3dp"
                app:sl_dy="5dp"
                app:sl_shadowColor="#1D000000"
                app:sl_shadowRadius="7dp">

                <Button
                    android:id="@+id/buttonDelete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/background_delect_botton"
                    android:elevation="5dp"
                    android:paddingRight="50dp"
                    android:paddingLeft="50dp"
                    android:text="ลบบัญชีผู้ใช้"
                    android:textAllCaps="false"
                    android:textColor="@color/white" />
            </com.dd.ShadowLayout>



        </LinearLayout>


    </ScrollView>

</RelativeLayout>